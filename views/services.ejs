<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="./css/main.css">
    <title>Services</title>
</head>

<body>

    <%- include('./part/navbar'); %>

        <header class="header-services mt-nav d-flex align-items-center bg-gradient-blue py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <h1 class="text-wihte">Services</h1>
                        <p class="text-light">Naxly bring the power of data science and artificial intelligence to every
                            business.</p>
                    </div>
                </div>
            </div>
        </header>
        <section class="services py-5 my-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center">
                        <span class="text-secondary fs-5">notre Services</span>
                        <h2 class="fs-1">IT solutions for startup and enterprises</h2>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <% for(let service of services) { %>
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <div class="card border-0 bg-transparent box-center position-relative py-3 text-center">
                                <a href="/service/<%= service._id%>" class="stretched-link"></a>
                                <div
                                    class="avatar bg-wihte display-4 text-secondary shadow-sm rounded-circle box-center my-3">
                                    <%- service.icon%>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title fs-3">
                                        <%= service.title%>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>



        <%- include('./part/footer') %>
        <script src="/js/jqoury.min.js"></script>
        <script src="/js/Popper.js"></script>
        <script src="/js/bootstrap.min.js"></script>
</body>

</html>