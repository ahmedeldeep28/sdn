<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/main.css">
    <title>Management team</title>
</head>

<body>

    <%- include('./part/addTeam'); %>
        <%- include('./part/aside'); %>
            <main class="page_content mt-5 mt-md-0 px-3">
                <h1 class="mt-3">Management team</h1>
                <div class="text-center mt-5">
                    <button type="button" class="btn btn-light text-capitalize p-3" data-bs-toggle="modal"
                        data-bs-target="#cretae_team">
                        <span class="d-block fs-4">
                            <i class="fa-solid fa-plus"></i>
                        </span>
                        add membere for addTeam
                    </button>
                </div>
                <section class="team py-5">
                    <div class="container">
                        <div class="row g-3">
                            <% for(let memberTeam of memberTeams) { %>
                                <div class="col-12 col-sm-6 col-lg-4 mt-4">
                                    <div class="card card_team rounded-5 shadow-sm">
                                        <header>
                                            <img src="/<%= memberTeam.image%>" class="card-img-top" alt="...">
                                        </header>
                                        <div class="card-body">
                                            <h4 class="card-title mb-2 text-capitalize">
                                                <%= memberTeam.name%>
                                            </h4>
                                            <div class="d-flex justify-content-between align-items-start">
                                                <p class="text-secondary fs-4 text-capitalize">
                                                    <%= memberTeam.job%>
                                                </p>
                                                <ul class="socail d-flex justify-content-center list-unstyled">
                                                    <li class="socail__item me-2">
                                                        <a class="text-dark d-block fs-4"
                                                            href="<%= memberTeam.facebook%>">
                                                            <i class="fa-brands fa-facebook"></i>
                                                        </a>
                                                    </li>
                                                    <li class="socail__item me-2">
                                                        <a class="text-dark d-block fs-4"
                                                            href="<%= memberTeam.twitter%>">
                                                            <i class="fa-brands fa-twitter"></i>
                                                        </a>
                                                    </li>
                                                    <li class="socail__item me-2">
                                                        <a class="text-dark d-block fs-4"
                                                            href="<%= memberTeam.linkedin%>">
                                                            <i class="fa-brands fa-linkedin"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <form action="/dashbord/team/delete" method="post">
                                                <input type="text" name="membereId" value="<%= memberTeam._id%>" hidden>
                                                <button class="btn btn-danger" type="submit">
                                                    delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </section>
            </main>






            <script src="/js/popper.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
</body>

</html>