<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/main.css">
    <title>Management message</title>
</head>

<body>


    <%- include('./part/addService'); %>
        <%- include('./part/aside'); %>
            <main class="page_content mt-5 mt-md-0 px-3">
                <h1 class="mt-3">Management service</h1>
                <div class="text-center mt-5">
                    <button type="button" class="btn btn-light text-capitalize p-3" data-bs-toggle="modal"
                        data-bs-target="#add_technology">
                        <span class="d-block fs-4">
                            <i class="fa-solid fa-plus"></i>
                        </span>
                        add service
                    </button>
                </div>
                <section class="py-4">
                    <div class="container">
                        <div class="row g-3">
                            <% for(let service of services) { %>
                                <div class="col-sm-6 col-lg-4 mt-3">
                                    <div class="card bg-transparent position-relative border text-center">
                                        <a href="/dashbord/service/<%= service._id%>">
                                            <div class="card-body">
                                                <i class="fa-solid fa-sitemap fs-1 text-secondary"></i>
                                                <div class="card-body">
                                                    <h5 class="card-title fs-3">
                                                        <%= service.title%>
                                                    </h5>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="card-footer">
                                            <form action="/dashbord/services/delete" method="post">
                                                <input type="text" name="serviceId" value="<%= service._id%>" hidden>
                                                <button class="btn btn-danger" type="submit">
                                                    delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% } %>


                        </div>
                    </div>
                </section>
            </main>






            <script src="/js/popper.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
</body>

</html>